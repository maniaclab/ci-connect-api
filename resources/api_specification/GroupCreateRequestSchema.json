{
  "type": "object",
  "$schema": "http://json-schema.org/draft-07/schema",
  "id": "http://jsonschema.net",
  "required": true,
  "properties": {
    "apiVersion": {
      "type": "string",
      "enum": [ "v1alpha1" ]
    },
    "kind": {
      "type": "string",
      "enum": [ "Group" ]
    },
    "metadata": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "field_of_science": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "phone": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      },
      "required": ["name","field_of_science","email","phone","description"]
    }
  },
  "required": ["apiVersion","kind","metadata"]
}
