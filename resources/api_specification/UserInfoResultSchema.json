{
  "type": "object",
  "$schema": "http://json-schema.org/draft-07/schema",
  "id": "http://jsonschema.net",
  "required": true,
  "properties": {
    "apiVersion": {
      "type": "string",
      "enum": [ "v1alpha1" ]
    },
    "kind": {
      "type": "string",
      "enum": [ "User" ]
    },
    "metadata": {
      "type": "object",
      "properties": {
        "id": {
          "type": string
        },
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "phone": {
          "type": "string"
        },
        "institution": {
          "type": "string"
        },
        "access_token": {
          "type": "string"
        },
        "public_key": {
          "type": "string",
          "required": true
        },
        "superuser": {
          "type": "boolean"
        },
        "groups_memberships": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "state": {
                "type": "string",
                "enum": ["pending","active","admin","disabled"]
              },
              "state_set_by": {
                "type": "string"
              }
            },
            "required": ["name","state","state_set_by"]
          }
        }
      },
      "required": ["id","name","email","phone","institution","access_token","admin","groups"]
    }
  },
  "required": ["apiVersion","kind","metadata"]
}
