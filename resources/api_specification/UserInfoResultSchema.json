{
  "type": "object",
  "$schema": "http://json-schema.org/draft-07/schema",
  "id": "http://jsonschema.net",
  "required": true,
  "properties": {
    "apiVersion": {
      "type": "string",
      "enum": [ "v1alpha1" ]
    },
    "kind": {
      "type": "string",
      "enum": [ "User" ]
    },
    "metadata": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "phone": {
          "type": "string"
        },
        "institution": {
          "type": "string"
        },
        "access_token": {
          "type": "string"
        },
        "public_key": {
          "type": "string"
        },
        "unix_name": {
          "type": "string"
        },
        "unix_id": {
          "type": "number"
        },
        "superuser": {
          "type": "boolean"
        },
        "service_account": {
          "type": "boolean"
        },
        "join_date": {
          "type": "boolean"
        },
        "group_memberships": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "state": {
                "type": "string",
                "enum": ["pending","active","admin","disabled"]
              },
              "state_set_by": {
                "type": "string"
              }
            },
            "required": ["name","state","state_set_by"]
          }
        }
      },
      "required": ["id","name","email","phone","institution","access_token","public_key","unix_name","unix_id","superuser","service_account","join_date"]
    }
  },
  "required": ["apiVersion","kind","metadata"]
}
